<?xml version="1.0" encoding="utf-8"?>

<!--using linear layout for arranging the elements-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:weightSum="5"
    >

<!--    Adding a text view for the sign up heading-->
    <TextView
        android:id="@+id/signupText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:gravity="center"
        android:text="SignUp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textSize="35sp" />

<!--    Adding a text field to input email address from user-->
    <EditText
        android:id="@+id/editTextEmailAddress"
        android:layout_width="311dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Email"
        android:maxLines="1"
        android:layout_gravity="center"
        android:singleLine="true"
        android:inputType="textEmailAddress" />

<!--    Adding  a text field to input password from the user-->
    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:maxLines="1"
        android:layout_gravity="center"
        android:singleLine="true" />


<!--Adding the signup button-->
    <Button
        android:id="@+id/btnsignup"
        android:layout_width="123dp"
        android:layout_height="59dp"
        android:layout_gravity="center"
        android:text="SignUp" />

<!--    Adding the progress bar-->
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content" />

</LinearLayout>